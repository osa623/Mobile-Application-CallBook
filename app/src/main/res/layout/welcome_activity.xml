<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityFunctions.WelcomeActivity">

    <LinearLayout
        android:id="@+id/CallBookLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/WelcomeTextview"
        android:layout_below="@id/CallBookLogo"
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_height="match_parent"
            android:text="This app is for save all the contacts and save your time without any unauthorized needs"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textSize="12sp" />

    </LinearLayout>





    <LinearLayout

        android:id="@+id/WelcomeScreenButtonSet"
        android:layout_below="@id/WelcomeTextview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/GetStartButton"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/get_started1"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout

        android:id="@+id/PrivacyText"
        android:layout_below="@id/WelcomeScreenButtonSet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_height="match_parent"
            android:text="CallBook respects user privacy, collecting personal data such as user details and payment schedules solely to enhance user experience. We do not share or sell user data unless required by law or to fulfill user requests. Users can access, modify, or delete their stored information. By using the app, users agree to this policy"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textSize="8sp"/>

    </LinearLayout>



</RelativeLayout>